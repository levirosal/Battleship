pipeline {
    agent any

    stages {

        stage ('Create workspace Stage') {

            steps {
                sh 'mkdir -p class/com/levi/model/'
                sh 'mkdir -p class/com/levi/view/'
                sh 'mkdir -p class/com/levi/controller/'
            }
        }

        stage ('Compile Stage') {

            steps {
                sh 'javac -d class/ src/com/levi/model/*.java'
                sh 'javac -d class/ src/com/levi/controller/*.java'
                sh 'javac -d class/ src/com/levi/view/*.java'
            }
        }

        stage ('Create jar Stage') {

            steps {
                sh 'jar -cvmf class/manifest.txt Battleship.jar class/'
            }
        }

        stage ('Verify Stage') {
            steps {
                sh 'ls -lh class/"'
            }
        }
    }
}